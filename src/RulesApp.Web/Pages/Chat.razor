@page "/chat"
@using RulesApp.Shared
@inject HttpClient Http
@inject LanguageState LanguageState
@implements IDisposable

<PageTitle>@L("Assistant - RulesApp", "Assistant - RulesApp")</PageTitle>

<h1>@L("Assistant de r√®glements", "Rules assistant")</h1>
<p class="lead">@L("Posez vos questions sur les r√®glements de baseball", "Ask your baseball rules questions")</p>

<div class="chat-container">
    <div class="mb-3">
        <textarea @bind="query" 
              @bind:event="oninput"
              @onkeypress="HandleKeyPress"
              rows="3"
              placeholder="@L("Ex: Combien de joueurs dans une √©quipe? Quelle est la dur√©e d'un match?", "e.g. How many players per team? What is the game duration?")" 
              class="form-control form-control-lg">
        </textarea>
        <small class="form-text text-muted">@L("Maximum 500 caract√®res", "Maximum 500 characters")</small>
    </div>

    <div class="filters mb-3">
        <div class="row g-3">
            <div class="col-md-4">
                <label for="seasonSelect" class="form-label">@L("Saison", "Season")</label>
                <input type="text" 
                       id="seasonSelect"
                      @bind="seasonId"
                      @bind:after="OnSeasonChanged"
                       placeholder="2025" 
                       class="form-control" />
            </div>
            <div class="col-md-4">
                <label for="associationSelect" class="form-label">@L("Association (optionnel)", "Association (optional)")</label>
                <select id="associationSelect" class="form-select" @bind="selectedAssociation" disabled="@isLoadingAssociations">
                    <option value="">@L("-- Aucune association --", "-- No association --")</option>
                    @foreach (var option in associationOptions)
                    {
                        <option value="@option">@option</option>
                    }
                </select>
                @if (isLoadingAssociations)
                {
                    <small class="form-text text-muted">@L("Chargement des associations...", "Loading associations...")</small>
                }
                else if (associationsLoadFailed)
                {
                    <small class="form-text text-danger">@L("Impossible de charger les associations.", "Unable to load associations.")</small>
                }
                else
                {
                    <small class="form-text text-muted">@L("Pour les r√®gles r√©gionales sp√©cifiques", "For regional-specific rules")</small>
                }
            </div>
        </div>
    </div>

    <button @onclick="AskAsync" class="btn btn-primary btn-lg" disabled="@isAsking">
        @if (isAsking)
        {
            <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
            <span>@L("Recherche en cours...", "Searching...")</span>
        }
        else
        {
            <span>@L("ü§î Poser la question", "ü§î Ask the question")</span>
        }
    </button>
</div>

@if (errorMessage != null)
{
    <div class="alert alert-danger mt-4" role="alert">
        <strong>@L("Erreur:", "Error:")</strong> @errorMessage
    </div>
}

@if (response != null)
{
    <div class="response-container mt-4">
        @if (response.Status == "not_found")
        {
            <div class="alert alert-warning" role="alert">
                <h5 class="alert-heading">@L("‚ùå Aucune r√®gle trouv√©e", "‚ùå No rule found")</h5>
                <p>@L("Aucune r√®gle pertinente n'a √©t√© trouv√©e dans les r√®glements pour votre question.", "No relevant rules were found for your question.")</p>
                <hr>
                <p class="mb-0">@L("Essayez de reformuler votre question ou utilisez des mots-cl√©s diff√©rents.", "Try rephrasing or using different keywords.")</p>
            </div>
        }
        else
        {
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">@L("‚úÖ R√©ponse bas√©e sur les r√®glements", "‚úÖ Answer based on the rules")</h5>
                </div>
                <div class="card-body">
                    <div class="answer-text mb-4">
                        @((MarkupString)response.Answer.Replace("\n", "<br/>"))
                    </div>

                    @if (response.Citations.Count > 0)
                    {
                        <div class="citations">
                            <h6 class="border-bottom pb-2">üìö @L("R√©f√©rences", "References") (@response.Citations.Count)</h6>
                            @foreach (var citation in response.Citations)
                            {
                                <div class="citation-card card mb-2">
                                    <div class="card-body p-3">
                                        <div class="d-flex justify-content-between align-items-start">
                                            <div>
                                                @if (!string.IsNullOrEmpty(citation.RuleNumberText))
                                                {
                                                    <span class="badge bg-primary me-2">@L("R√®gle", "Rule") @citation.RuleNumberText</span>
                                                }
                                                <strong>@(citation.Title ?? L("R√®glement", "Rule"))</strong>
                                            </div>
                                            <span class="badge bg-info">@citation.Scope</span>
                                        </div>
                                        <p class="small text-muted mb-2 mt-2">@citation.TextPreview...</p>
                                        <div class="citation-meta small text-muted">
                                            <span class="me-3">üìÑ @L("Pages", "Pages") @citation.PageStart-@citation.PageEnd</span>
                                            <span class="me-3">üìò @citation.DocType</span>
                                            @if (!string.IsNullOrEmpty(citation.AssociationId))
                                            {
                                                <span>üè¢ @citation.AssociationId</span>
                                            }
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>

                        <div class="stats mt-3 text-muted small">
                            <span class="me-3">‚úÖ @response.ContextUsed @L("r√®gle(s) utilis√©e(s)", "rule(s) used")</span>
                            <span>üîç @response.TotalRetrieved @L("r√©sultat(s) trouv√©(s)", "result(s) found")</span>
                        </div>
                    }
                </div>
            </div>
        }
    </div>
}

@code {
    private string query = "";
    private string seasonId = "2025";
    private List<string> associationOptions = new();
    private bool isLoadingAssociations = true;
    private bool associationsLoadFailed = false;
    private string selectedAssociation = "";
    private bool isAsking = false;
    private string? errorMessage = null;
    private ChatResponse? response = null;

    protected override async Task OnInitializedAsync()
    {
        LanguageState.OnChange += HandleLanguageChanged;
        await LoadAssociationsAsync(seasonId);
    }

    private async Task LoadAssociationsAsync(string? season)
    {
        try
        {
            isLoadingAssociations = true;
            associationsLoadFailed = false;
            var uri = string.IsNullOrWhiteSpace(season)
                ? "api/associations"
                : $"api/associations?seasonId={Uri.EscapeDataString(season)}";
            var response = await Http.GetFromJsonAsync<AssociationListResponse>(uri);
            associationOptions = response?.Associations ?? new List<string>();
        }
        catch
        {
            associationsLoadFailed = true;
            associationOptions = new List<string>();
        }
        finally
        {
            isLoadingAssociations = false;
        }
    }

    private async Task OnSeasonChanged()
    {
        await LoadAssociationsAsync(seasonId);
    }

    private async Task AskAsync()
    {
        errorMessage = null;
        response = null;

        if (string.IsNullOrWhiteSpace(query))
        {
            errorMessage = L("Veuillez entrer une question.", "Please enter a question.");
            return;
        }

        if (query.Length > 500)
        {
            errorMessage = L("La question est trop longue (maximum 500 caract√®res).", "Question is too long (max 500 characters).");
            return;
        }

        try
        {
            isAsking = true;
            
            var request = new ChatRequest(
                Query: query.Trim(),
                SeasonId: string.IsNullOrWhiteSpace(seasonId) ? null : seasonId,
                AssociationId: string.IsNullOrWhiteSpace(selectedAssociation) ? null : selectedAssociation,
                MaxContext: 5,
                UseAI: true  // AI-enhanced mode with OpenAI
            );

            var httpResponse = await Http.PostAsJsonAsync("api/chat", request);
            
            if (httpResponse.IsSuccessStatusCode)
            {
                response = await httpResponse.Content.ReadFromJsonAsync<ChatResponse>();
            }
            else
            {
                var errorContent = await httpResponse.Content.ReadAsStringAsync();
                errorMessage = L($"Erreur {httpResponse.StatusCode}: {errorContent}", $"Error {httpResponse.StatusCode}: {errorContent}");
            }
        }
        catch (Exception ex)
        {
            errorMessage = L($"Erreur lors de la requ√™te: {ex.Message}", $"Error during request: {ex.Message}");
        }
        finally
        {
            isAsking = false;
        }
    }

    private async Task HandleKeyPress(KeyboardEventArgs e)
    {
        if (e.Key == "Enter" && e.CtrlKey && !isAsking)
        {
            await AskAsync();
        }
    }

    private void HandleLanguageChanged()
    {
        StateHasChanged();
    }

    private bool IsEnglish => LanguageState.Current == "EN";
    private string L(string fr, string en) => IsEnglish ? en : fr;

    public void Dispose()
    {
        LanguageState.OnChange -= HandleLanguageChanged;
    }
}
