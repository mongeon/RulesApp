@page "/chat"
@using RulesApp.Shared
@inject HttpClient Http

<PageTitle>Assistant - RulesApp</PageTitle>

<h1>Assistant de r√®glements</h1>
<p class="lead">Posez vos questions sur les r√®glements de baseball</p>

<div class="chat-container">
    <div class="mb-3">
        <textarea @bind="query" 
                  @bind:event="oninput"
                  @onkeypress="HandleKeyPress"
                  rows="3"
                  placeholder="Ex: Combien de joueurs dans une √©quipe? Quelle est la dur√©e d'un match?" 
                  class="form-control form-control-lg">
        </textarea>
        <small class="form-text text-muted">Maximum 500 caract√®res</small>
    </div>

    <div class="filters mb-3">
        <div class="row">
            <div class="col-md-6">
                <label for="seasonSelect" class="form-label">Saison</label>
                <input type="text" 
                       id="seasonSelect"
                       @bind="seasonId" 
                       placeholder="2025" 
                       class="form-control" />
            </div>
            <div class="col-md-6">
                <label for="associationInput" class="form-label">Association (optionnel)</label>
                <input type="text" 
                       id="associationInput"
                       @bind="associationId" 
                       placeholder="Ex: LBML" 
