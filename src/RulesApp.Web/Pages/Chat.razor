                <small class="form-text text-muted">Pour les r√®gles r√©gionales sp√©cifiques</small>
            </div>
        </div>
    </div>

    <button @onclick="AskAsync" class="btn btn-primary btn-lg" disabled="@isAsking">
        @if (isAsking)
        {
            <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
            <span>Recherche en cours...</span>
        }
        else
        {
            <span>ü§î Poser la question</span>
        }
    </button>
</div>

@if (errorMessage != null)
{
    <div class="alert alert-danger mt-4" role="alert">
        <strong>Erreur:</strong> @errorMessage
    </div>
}

@if (response != null)
{
    <div class="response-container mt-4">
        @if (response.Status == "not_found")
        {
            <div class="alert alert-warning" role="alert">
                <h5 class="alert-heading">‚ùå Aucune r√®gle trouv√©e</h5>
                <p>Aucune r√®gle pertinente n'a √©t√© trouv√©e dans les r√®glements pour votre question.</p>
                <hr>
                <p class="mb-0">Essayez de reformuler votre question ou utilisez des mots-cl√©s diff√©rents.</p>
            </div>
        }
        else
        {
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">‚úÖ R√©ponse bas√©e sur les r√®glements</h5>
                </div>
                <div class="card-body">
                    <div class="answer-text mb-4">
                        @((MarkupString)response.Answer.Replace("\n", "<br/>"))
                    </div>

                    @if (response.Citations.Count > 0)
                    {
                        <div class="citations">
                            <h6 class="border-bottom pb-2">üìö R√©f√©rences (@response.Citations.Count)</h6>
                            @foreach (var citation in response.Citations)
                            {
                                <div class="citation-card card mb-2">
                                    <div class="card-body p-3">
                                        <div class="d-flex justify-content-between align-items-start">
                                            <div>
                                                @if (!string.IsNullOrEmpty(citation.RuleNumberText))
                                                {
                                                    <span class="badge bg-primary me-2">R√®gle @citation.RuleNumberText</span>
                                                }
                                                <strong>@(citation.Title ?? "R√®glement")</strong>
                                            </div>
                                            <span class="badge bg-info">@citation.Scope</span>
                                        </div>
                                        <p class="small text-muted mb-2 mt-2">@citation.TextPreview...</p>
                                        <div class="citation-meta small text-muted">
                                            <span class="me-3">üìÑ Pages @citation.PageStart-@citation.PageEnd</span>
                                            <span class="me-3">üìò @citation.DocType</span>
                                            @if (!string.IsNullOrEmpty(citation.AssociationId))
                                            {
                                                <span>üè¢ @citation.AssociationId</span>
                                            }
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>

                        <div class="stats mt-3 text-muted small">
                            <span class="me-3">‚úÖ @response.ContextUsed r√®gle(s) utilis√©e(s)</span>
                            <span>üîç @response.TotalRetrieved r√©sultat(s) trouv√©(s)</span>
                        </div>
                    }
                </div>
            </div>
        }
    </div>
}

@code {
    private string query = "";
    private string seasonId = "2025";
    private string? associationId = null;
    private bool isAsking = false;
    private string? errorMessage = null;
    private ChatResponse? response = null;

    private async Task AskAsync()
    {
        errorMessage = null;
        response = null;

        if (string.IsNullOrWhiteSpace(query))
        {
            errorMessage = "Veuillez entrer une question.";
            return;
        }

        if (query.Length > 500)
        {
            errorMessage = "La question est trop longue (maximum 500 caract√®res).";
            return;
        }

        try
        {
            isAsking = true;
            
            var request = new ChatRequest(
                Query: query.Trim(),
                SeasonId: string.IsNullOrWhiteSpace(seasonId) ? null : seasonId,
                AssociationId: string.IsNullOrWhiteSpace(associationId) ? null : associationId,
                MaxContext: 5,
                UseAI: false  // Direct mode by default
            );

            var httpResponse = await Http.PostAsJsonAsync("api/chat", request);
            
            if (httpResponse.IsSuccessStatusCode)
            {
                response = await httpResponse.Content.ReadFromJsonAsync<ChatResponse>();
            }
            else
            {
                var errorContent = await httpResponse.Content.ReadAsStringAsync();
                errorMessage = $"Erreur {httpResponse.StatusCode}: {errorContent}";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Erreur lors de la requ√™te: {ex.Message}";
        }
        finally
        {
            isAsking = false;
        }
    }

    private async Task HandleKeyPress(KeyboardEventArgs e)
    {
        if (e.Key == "Enter" && e.CtrlKey && !isAsking)
        {
            await AskAsync();
        }
    }
}
